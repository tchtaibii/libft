#include <inttypes.h>
#include <stdio.h>
#include <stdlib.h>

char *putnbr(int n)
{
    char c;
    int i;
    int tmp;
    int j;
    char *str;
    int count;

    j = 1;
    count = 1;
    i = 0;
    tmp = n;
    while (tmp > 9)
    {
        tmp = tmp / 10;
        j *= 10;
        count++;
    }
    str = malloc(sizeof(char) * count + 1);
    while (j > 0)
    {
        c = (n / j) + 48;
        str[i] = c;
        n -= ((c - 48) * j);
        j /= 10;
        i++;
    }
    str[i] = '\0';
    return(str);
    }
int descendingOrder(int n)
{
    char *str = putnbr(n);
    int i;
    char t;
    i = 1;
    while(str[i])
    {
        if (str[i] > str[i - 1])
        {
            t = str[i];
            str[i] = str[i -1];
            str[i - 1] = t;
            i = 0;
        }
        i++;
    }
    n = atoi(str);
    return (n);
}